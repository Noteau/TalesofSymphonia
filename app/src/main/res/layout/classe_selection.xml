<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ecran_accueil"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FAFA">
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Retour"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />
    <HorizontalScrollView
        android:id="@+id/horizontalscrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="horizontal"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:orientation="horizontal">
           <Button
               android:id="@+id/warrior"
               android:layout_margin="20dp"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Guerrirer"
               android:drawableTop="@mipmap/elfe_warrior"
               android:layout_gravity="center"
               />
           <Button
               android:id="@+id/diplomate"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Diplomate"
               android:drawableTop="@mipmap/elfe_diplomate"
               android:layout_margin="20dp"
               android:layout_gravity="center"
               />
           <Button
               android:id="@+id/survie"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Survie"
               android:drawableTop="@mipmap/elfe_surv"
               android:layout_margin="20dp"
               android:layout_gravity="center" />
            <Button
                android:id="@+id/chasseur"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="A implementer (Chasseur)"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/mage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="A implÃ©menter (Mage)"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>

